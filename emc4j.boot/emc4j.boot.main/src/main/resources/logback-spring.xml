<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss.SSS} [%thread][%8.-8X{emcApplication}/%8.-8X{emcInstance}] %-5level %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>

    <springProfile name="dev">
        <!--
        <logger name="com.treilhes.emc4j" level="ERROR"/>
        <logger name="com.treilhes.emc4j.boot" level="DEBUG"/>
        <logger name="com.treilhes.emc4j.core.api" level="DEBUG"/>
        <logger name="com.treilhes.emc4j.core.ui" level="DEBUG"/>
        <logger name="com.treilhes.emc4j.ext.scenicview" level="DEBUG"/>


        <logger name="org.springframework" level="ERROR"/>
        <logger name="org.springframework.aop" level="ERROR"/>
        <logger name="org.springframework.orm.jpa" level="ERROR"/>

        <logger name="org.apache.catalina" level="TRACE"/>
         -->




        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="!dev">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>